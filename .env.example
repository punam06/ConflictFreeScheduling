# Database Configuration for Conflict-Free Scheduling System
# Copy this file to .env and modify the values as needed

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=conflict_free_scheduling
DB_USER=root
DB_PASSWORD=

# Application Settings
APP_DEBUG=False
APP_LOG_LEVEL=INFO

# University Information
UNIVERSITY_NAME=Bangladesh University of Professionals
DEPARTMENT_NAME=Department of Computer Science & Engineering
DEPARTMENT_CODE=CSE

# Academic Year Settings
CURRENT_ACADEMIC_YEAR=2024-25
CURRENT_SEMESTER=Spring 2025

# Time Slot Configuration
BASE_START_HOUR=8
BASE_START_MINUTE=30
SLOT_DURATION_MINUTES=30
BREAK_START_TIME=13:30
BREAK_END_TIME=14:00

# PDF Generation Settings
PDF_OUTPUT_DIR=output
PDF_TEMPLATE_DIR=templates
ENABLE_PDF_GENERATION=True

# Algorithm Configuration
DEFAULT_ALGORITHM=graph-coloring
GA_POPULATION_SIZE=50
GA_GENERATIONS=100
GA_CROSSOVER_RATE=0.8
GA_MUTATION_RATE=0.1
GA_ELITE_SIZE=5

# Logging Configuration
LOG_FILE=scheduler.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S
